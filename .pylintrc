[MASTER]
# Use multiple processes to speed up Pylint
jobs=1

[MESSAGES CONTROL]
# Disable specific messages
# C0111: missing-docstring
# R0913: too-many-arguments
# R0914: too-many-locals
# R0917: too-many-positional-arguments (Python 3.12+ check)
# W0718: broad-exception-caught (catching general Exception is intentional)
# W0621: redefined-outer-name (common in nested functions)
# R1732: consider-using-with (manual resource management needed for stdin/stdout)
# W1514: unspecified-encoding (binary mode used intentionally)
# R1705: no-else-return (else improves readability in some cases)
# R0912: too-many-branches (complex logic required)
# R0915: too-many-statements (long functions with clear structure)
# R0801: duplicate-code (acceptable for similar I/O patterns)
disable=C0111,R0913,R0914,R0917,W0718,W0621,R1732,W1514,R1705,R0912,R0915,R0801

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,ex,Run,_,f,fh

[DESIGN]
# Maximum number of arguments for function / method
max-args=7
# Maximum number of locals for function / method body
max-locals=20
